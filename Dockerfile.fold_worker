# syntax=docker/dockerfile:1
FROM rust:bookworm AS builder
WORKDIR /app
COPY . .
RUN cargo build --release --bin fold_worker
RUN ls -l /app/target/release

FROM debian:bookworm-slim
WORKDIR /app
RUN apt-get update && apt-get install -y libssl3 curl postgresql-client bash && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/fold_worker /app/fold_worker
COPY wait-for-it.sh /app/wait-for-it.sh
RUN chmod +x /app/wait-for-it.sh /app/fold_worker
CMD ["/app/wait-for-it.sh", "minio:9000", "--timeout=30", "--", "/app/fold_worker"]
